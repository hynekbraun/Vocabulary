<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#EDD98E">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write new word"
        />

    <EditText
        android:id="@+id/et_add_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your word here" />

    <EditText
        android:id="@+id/et_add_translation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your translation here"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_add_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your notes here"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_new_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:text="ADD"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_new_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:text="CANCEL"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>